{
  "name": "@nephidream/ng-helper",
  "version": "1.1.0",
  "description": "Help you ease development experience with an `@angular/cli` 6+ project with multiple applications and/or libraries.",
  "main": "dist/index.js",
  "private": false,
  "scripts": {
    "test": "mocha --opts ./mocha.opts",
    "test:watch": "npm test -- --watch --watch-extensions ts",
    "test:coverage": "nyc npm test",
    "test:coverage-report": "nyc report --reporter=json > coverage/coverage.json",
    "build": "tsc",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "release": "standard-version",
    "precommit": "pretty-quick --staged && lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WilliamChelman/ng-helper.git"
  },
  "author": "William Chelman",
  "keywords": [
    "angular",
    "angular-cli",
    "Angular CLI"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/WilliamChelman/ng-helper/issues"
  },
  "homepage": "https://github.com/WilliamChelman/ng-helper#readme",
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/detect-indent": "^5.0.0",
    "@types/mocha": "^5.2.0",
    "@types/node": "^10.0.4",
    "@types/sinon": "^5.0.0",
    "@types/yargs": "^11.0.0",
    "chai": "^4.1.2",
    "husky": "^0.14.3",
    "lint-staged": "^7.1.1",
    "mocha": "^5.1.1",
    "nyc": "^11.7.3",
    "prettier": "^1.12.1",
    "pretty-quick": "^2.0.0",
    "rxjs-compat": "^6.1.0",
    "sinon": "^5.0.7",
    "standard-version": "^4.3.0",
    "ts-node": "~6.0.3",
    "tslib": "^1.9.0",
    "tslint": "~5.10.0",
    "tslint-config-prettier": "^1.12.0",
    "typescript": "~2.8.3"
  },
  "peerDependencies": {
    "@angular/cli": "^6.0.0"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "commander": "^2.15.1",
    "detect-indent": "^5.0.0",
    "nodemon": "^1.17.4",
    "prompts": "^0.1.8",
    "rxjs": "^6.1.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "tslint --fix",
      "git add"
    ]
  },
  "standard-version": {
    "skip": {
      "tag": true
    }
  },
  "bin": {
    "ng-helper": "./dist/bin/ng-helper.js"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "coverage/**/*",
      "test/**/*",
      "dist/**/*",
      "src/**/*.spec.ts",
      "**/*.d.ts"
    ],
    "reporter": [
      "lcov"
    ],
    "all": true,
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ]
  }
}
